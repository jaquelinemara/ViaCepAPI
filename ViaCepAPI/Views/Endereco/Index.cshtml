@model List<Endereco>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <title>Consultar Endereço</title>
</head>
<body>
    <h3>Consultar e Cadastrar CEP </h3>

    <div class="container" style="margin-top: 30px">
        <form asp-action="PesquisarCep" asp-controller="Endereco">
            <label for="txtCep">CEP</label>
            <input type="text" id="txtCep" name="txtCep" class="form-control col-4" placeholder="Ex. 00000000" size="40" /><br />
            <input type="submit" value="Consultar e Cadastrar" class="btn-info" /><br /><br />

            <table class="table table-bordered">
                <tr>
                    <th>Cep</th>
                    <th>Logradouro</th>
                    <th>Complemento</th>
                    <th>Bairro</th>
                    <th>Localidade</th>
                    <th>UF</th>
                </tr>


                @foreach (Endereco e in Model)
                {
                    <tr>
                        <td>@e.Cep</td>
                        <td>@e.Logradouro</td>
                        <td>@e.Complemento</td>
                        <td>@e.Bairro</td>
                        <td>@e.Localidade</td>
                        <td>@e.Uf</td>
                    </tr>
                }
            </table>
        </form>
    </div>
</body>
</html>
